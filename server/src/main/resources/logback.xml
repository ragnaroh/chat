<configuration>
   <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <charset>UTF-8</charset>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS,Europe/Oslo} [%level] [%thread] [%logger{0}]: %msg%n</pattern>
      </encoder>
   </appender>

   <logger name="com.ragnaroh.chat" level="DEBUG" />

   <root level="INFO">
      <appender-ref ref="CONSOLE" />
   </root>
</configuration>
